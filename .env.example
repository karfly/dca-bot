# OKX API credentials
OKX_API_KEY=your_api_key_here
OKX_API_SECRET=your_api_secret_here
OKX_API_PASSPHRASE=your_api_passphrase_here
OKX_SUBACCOUNT_NAME=dca_bot

# Exchange selection
EXCHANGE_ID=okx  # Currently only OKX is fully tested, other CCXT exchanges may work but are untested

# Telegram configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_USER_ID=your_user_id_here
TELEGRAM_NOTIFICATION_SOUND=true

# DCA configuration
DCA_AMOUNT_USD=100.0
DCA_PERIOD=1_day  # 1_minute, "1_day" or "1_hour"
DCA_TIME_UTC=18:00
MAX_TRANSACTION_LIMIT=1000.0

# Portfolio settings (track your existing BTC alongside DCA purchases)
PORTFOLIO_INITIAL_BTC=0.0  # Amount of BTC you already hold
PORTFOLIO_INITIAL_AVG_PRICE=0.0  # Average purchase price of your existing BTC

# MongoDB configuration
MONGODB_URI=mongodb+srv://username:password@clustername.mongodb.net/dca_bot?retryWrites=true&w=majority

# Application settings
DRY_RUN=false
LOG_LEVEL=INFO
RUN_IMMEDIATELY=false
